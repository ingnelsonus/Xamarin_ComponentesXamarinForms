<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompXamarin.View.AlertaN1"             
             xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             >

    <Frame CornerRadius="5" Margin="50,170,50,170">
        <Grid  BackgroundColor="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <Image Source="Angulo.png" HeightRequest="150" WidthRequest="150"></Image>
            <Label Text="Soy un mensaje Popup" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Grid.Row="1"
                   FontSize="25"                   
               >
            </Label>
            <Button x:Name="btnPopuoOk" Clicked="btnPopuoOk_Clicked" Text="OK" BackgroundColor="LightBlue"
                    Grid.Row="2" CornerRadius="5"
                    ></Button>
            
        </Grid>

    </Frame>
    
</popup:PopupPage>